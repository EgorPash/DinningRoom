@model List<DinningRoom.Models.MenuItem>
<h1>Редактирование меню</h1>
<form asp-controller="MenuRedaction" asp-action="Index" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Цена</th>
                <th>Выбрать</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.NameEat</td>
                    <td>@item.NameCategory</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <a href="@Url.Action("Edit", "MenuRedaction", new { id = item.Id })">Редактировать</a>
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", "MenuRedaction", new { id = item.Id })">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "MenuRedaction")">Добавить</a>

</form>
